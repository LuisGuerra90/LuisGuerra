#include <iostream>

int main()
{
    float numero1, numero2;
    
    std::cout << "Ingresa el primer numero: ";
    std::cin >> numero1;
    
    std::cout << "Ingresa el segundo numero: ";
    std::cin >> numero2;
    
    float suma = numero1 + numero2;
    float resta = numero1 - numero2;
    float multiplicacion = numero1 * numero2;
    float division = numero1 / numero2;
    
    std::cout << "La suma de " << numero1 << " + " << numero2 << " es: " << suma << std::endl;
    std::cout << "La resta de " << numero1 << " - " << numero2 << " es: " << resta << std::endl;
    std::cout << "La multiplicacion de " << numero1 << " * " << numero2 << " es: " << multiplicacion << std::endl;
    std::cout << "La division de " << numero1 << " / " << numero2 << " es: " << division << std::endl;

    return 0;
}
